    "db:push": "prisma db push --accept-data-loss",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.12.2",
    "@fastify/swagger-ui": "^1.10.1",
    "@pcf-app/types": "*",
    "@prisma/client": "^6.14.0",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "prisma": "^6.14.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
