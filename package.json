{
  "name": "pcf-app",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:web\" \"npm:dev:api\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm -w apps/web run build && npm -w apps/api run build",
    "typecheck": "npm -w apps/web run typecheck && npm -w apps/api run typecheck",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4"
  }
}
